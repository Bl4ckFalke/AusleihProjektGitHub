<Window x:Class="AusleihProjektGitHub.UI.ErstellenFenster"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AusleihProjektGitHub.UI"
        mc:Ignorable="d"
        Title="ErstellenFenster" Height="450" Width="800"
        Background="#dfebf6"
        MinWidth="800" MinHeight="450"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MaxWidth="120"/>
            <ColumnDefinition Width="*" MaxWidth="295"/>
            <ColumnDefinition Width="*" MaxWidth="95"/>
            <ColumnDefinition Width="*" MaxWidth="265"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MaxHeight="40"/>
            <RowDefinition Height="Auto" MaxHeight="40"/>
            <RowDefinition Height="Auto" MaxHeight="40"/>
            <RowDefinition Height="10"/>
            <RowDefinition MinHeight="221"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="70.04"/>
        </Grid.RowDefinitions>

        <!-- Background elements -->
        <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" 
                Background="#29353c" Margin="45,5,10,5" Grid.RowSpan="2"/>

        <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" 
                Background="#aac7d8" Margin="45,5,20,5">
            <TextBox Text="Hier Schadensbeschreibung (optional)" 
                    Background="Transparent" Foreground="#29353c"
                    TextWrapping="Wrap" VerticalAlignment="Stretch"
                    Margin="5" TextChanged="TextBox_TextChanged"/>
        </Border>

        <!-- Left column controls -->
        <Label Content="Ersteller:" Grid.Column="0" 
               Foreground="#29353c" FontSize="14" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="48,0,247,0" Height="29"/>
        <TextBox Text="Ersteller" Grid.Row="0" Grid.Column="1" 
                Margin="48,6,47,4" TextChanged="ersteller"/>

        <Label Content="Start:" Grid.Row="1" Grid.Column="0" 
               Foreground="#29353c" FontSize="14" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="48,0,247,0" Height="28"/>
        <TextBox Text="'Aktuelles Datum'" Grid.Row="1" Grid.Column="1" 
                Margin="48,6,47,4" TextChanged="startdat"/>

        <Label Content="Objekt:" Grid.Row="2" Grid.Column="0" 
               Foreground="#29353c" FontSize="14" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="48,0,247,0" Height="29"/>
        <TextBox Text="Objekt Typ" Grid.Row="2" Grid.Column="1" 
                Margin="48,6,47,4" TextChanged="objekt_tb"/>

        <!-- Right column controls -->
        <Label Content="Empfänger:" Grid.Column="2" 
               Foreground="#29353c" FontSize="14" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="44,0,220,0" Height="29"/>
        <TextBox Text="Empfänger" Grid.Row="0" Grid.Column="3" 
                Margin="45,6,20,4" TextChanged="empfaenger"/>

        <Label Content="Ende:" Grid.Row="1" Grid.Column="2" 
               Foreground="#29353c" FontSize="14" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="44,0,220,0" Height="28"/>
        <TextBox Text="Enddatum" Grid.Row="1" Grid.Column="3" 
                Margin="45,6,20,4" TextChanged="enddat"/>

        <Label Content="Objekt-ID:" Grid.Row="2" Grid.Column="2" 
               Foreground="#29353c" FontSize="14" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="44,0,220,0" Height="29"/>
        <TextBox Text="Objekt-ID" Grid.Row="2" Grid.Column="3" 
                Margin="45,6,0,4" TextChanged="obj_id" HorizontalAlignment="Left" Width="200"/>

        <!-- Buttons -->
        <Button Content="Speichern" Grid.Row="6" 
                HorizontalAlignment="Left" Width="145"
                Background="#29353c" Foreground="White" Click="bttn_erstellen" Grid.ColumnSpan="2" Margin="45,10,0,25"/>

        <Button Content="Abbrechen" Grid.Row="6" Grid.Column="3" 
                HorizontalAlignment="Right" Width="145"
                Background="#29353c" Foreground="White" Click="bttn_abbrechen" Margin="0,10,10,25"/>
    </Grid>
</Window>