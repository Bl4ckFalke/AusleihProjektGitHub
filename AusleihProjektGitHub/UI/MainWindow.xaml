<Window x:Class="AusleihProjektGitHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AusleihProjektGitHub"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="#dfebf6">

    <Grid>
        <Button Content="Erstellen" HorizontalAlignment="Left" Margin="15,39,0,0" VerticalAlignment="Top" Click="bttn_erstellen" Width="145" Height="35" Background="#29353c" Foreground="White"/>
        <Button Content="Verwalten" HorizontalAlignment="Left" Margin="15,116,0,0" VerticalAlignment="Top" Click="bttn_verwalten" Width="145" Height="35" Background="#29353c" Foreground="White"/>
        <Canvas HorizontalAlignment="Left" Height="391" Margin="180,0,0,14" VerticalAlignment="Bottom" Width="610" Background="#29353c"/>
        <Canvas HorizontalAlignment="Left" Height="385" Margin="175,0,0,0" VerticalAlignment="Center" Width="600" Background="#aac7d8" >
            <TextBox Canvas.Left="125" TextWrapping="Wrap" Text="Name eingeben" Canvas.Top="60" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center" Height="20" TextChanged="suche_Name"/>
            <ComboBox Canvas.Left="125" Text="Obejktart eingeben" Canvas.Top="95" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top" Height="20"/>
            <ComboBox Canvas.Left="460" Text="Obejktart eingeben" Canvas.Top="60" Width="120" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <CheckBox Content="Selbst erstellte?" Canvas.Left="460" Canvas.Top="95" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" Checked="CheckBox_Checked"/>
        </Canvas>

        <Label Foreground="#29353c" FontSize="14" Content="Suchen nach:" HorizontalAlignment="Left" Margin="190,41,0,0" VerticalAlignment="Top" Height="35" Width="100" FontWeight="Bold"/>
        <Label Foreground="#29353c" FontSize="14" Content="Name" HorizontalAlignment="Left" Margin="190,80,0,0" VerticalAlignment="Top" Height="30" Width="55"/>
        <Label Foreground="#29353c" FontSize="14" Content="Objektart" HorizontalAlignment="Left" Margin="190,115,0,0" VerticalAlignment="Top" Height="33" Width="70"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="190,153,40,40" Background="#dfebf6" Foreground="#29353c"/>
        <Label Foreground="#29353c" FontSize="14" Content="Klasse" HorizontalAlignment="Left" Margin="540,80,0,0" VerticalAlignment="Top" Height="30" Width="55"/>
        <Label Foreground="#29353c" FontSize="14" Content="Filtern nach:" HorizontalAlignment="Left" Margin="540,40,0,0" VerticalAlignment="Top" Height="35" Width="100" FontWeight="Bold"/>

    </Grid>
</Window>
