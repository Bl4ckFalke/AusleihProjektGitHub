<Window x:Class="AusleihProjektGitHub.UI.LoginFenster"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AusleihProjektGitHub.UI"
        mc:Ignorable="d"
        Title="LoginFenster" Height="450" Width="800"
        Background="#dfebf6">
    <Grid>
        <Label Foreground="#29353c" FontSize="48" HorizontalContentAlignment="Center" Content="Willkommen!" HorizontalAlignment="Center" Margin="0,64,0,0" VerticalAlignment="Top" Height="80" Width="480" FontWeight="Bold"/>

        <TextBox TextWrapping="Wrap" Text="User" TextChanged="UserLogin" Margin="240,204,240,190" RenderTransformOrigin="0.5,0.625" FontSize="24"/>
        <TextBox TextWrapping="Wrap" Text="Password" TextChanged="PwdLogin" Margin="240,284,320,110" RenderTransformOrigin="0.5,0.625" FontSize="24"/>

        <Button Content="Login" HorizontalAlignment="Left" Margin="480,284,0,0" VerticalAlignment="Top" Height="40" Width="80" FontSize="24" RenderTransformOrigin="0.5,0.876" Click="Button_Click"/>

    </Grid>
</Window>
